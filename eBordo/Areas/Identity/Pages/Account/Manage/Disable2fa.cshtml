@page
@model Disable2faModel
@{
    ViewData["Title"] = "Onemogući dvofaktorsku autentifikaciju (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Ova radnja onemogućava samo 2FA.</strong>
    </p>
    <p>
        Onemogućavanje 2FA ne mijenja tipke koje se koriste u aplikacijama za provjeru autentičnosti. Ako želite promijeniti ključ
        koji se koristi u aplikaciji za provjeru autentičnosti <a asp-page="./ResetAuthenticator">resetirajte svoje ključeve autentifikacije.</a>
    </p>
</div>

<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">Onemogući 2FA</button>
    </form>
</div>
