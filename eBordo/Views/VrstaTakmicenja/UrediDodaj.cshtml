@using eBordo_seminarski_rad.ViewModels.VrstaTakmicenja
@model VrstaTakmicenjaUrediDodajVM

<link rel="stylesheet" href="~/css/UrediDodajObrisi.css">

<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="SnimiUrediDodaj" asp-controller="VrstaTakmicenja" enctype="multipart/form-data">
                <div class="modal-header">
                    @if (@Model.vrstaTakmicenjaID == 0)
                    {
                        <h4 class="modal-title">Dodaj vrstu takmičenja</h4>
                    }
                    else
                    {
                        <h4 class="modal-title">Uredi vrstu takmičenja</h4>
                    }
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" readonly asp-for="vrstaTakmicenjaID" />
                        <label asp-for="nazivVrsteTakmicenja">Naziv vrste takmičenja</label>
                        <input asp-for="nazivVrsteTakmicenja" type="text" class="form-control" required>

                        <label asp-for="logoNew">Logo takmičenja</label>
                        <div class="custom-file mb-3">
                            <input type="file" class="custom-file-input" asp-for="logoNew" accept="image/*" onchange="generisiPreview(this)">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <div class="form-group">
                            @if (Model.logoCurrent == null)
                            {
                                <img id="previewImg" style="height: 200px;" src="~/upload.png" />
                            }
                            else
                            {
                                <img id="previewImg" style="height: 200px;" src="/uploads/@Model.logoCurrent" />
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <span id="btnIkona"><i class="fa fa-remove"></i></span>Poništi akciju
                    </button>
                    @if(@Model.vrstaTakmicenjaID == 0)
                    {
                        <button type="submit" class="btn btn-success">
                            <span id="btnIkona"><i class="fa fa-check"></i></span>Kreiraj vrstu takmičenja
                        </button>
                    }
                    else{
                        <button type="submit" class="btn btn-labeled btn-warning">
                            <span id="btnIkona"><i class="fa fa-check"></i></span>Snimi izmjene
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>