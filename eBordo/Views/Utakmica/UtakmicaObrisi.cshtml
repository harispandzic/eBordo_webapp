@using eBordo.ViewModels.Utakmica
@model UtakmicaObrisiVM
@{
    string poruka = (string)TempData["porukaInfo"];
}

<link rel="stylesheet" href="~/css/UrediDodajObrisi.css">

<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Brisanje utakmice</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Da li ste sigurni da želite obrisati zapis?</p>
                    <p class="text-danger"><p3>Akcija ne može biti vraćena!</p3></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <span id="btnIkona"><i class="fa fa-remove"></i></span>Poništi akciju
                    </button>
                    <button type="submit" class="btn btn-danger" onclick="obrisiUtakmicu(@Model.utakmicaID)">
                        <span id="btnIkona"><i class="fa fa-check"></i>   Obriši utakmicu</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
