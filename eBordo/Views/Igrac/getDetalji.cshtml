<script>
    $(document).ready(function () {
        var progressBar = document.getElementsByClassName("progress-bar bg-success");
        var vrijednosti = document.getElementsByClassName("statistikaIgraci");
        for (var i = 0; i < vrijednosti.length; i++) {
            var variable = parseFloat(vrijednosti[i].innerText) * 10;
            $(progressBar[i]).html(variable + "%");
            var unit = "%";
            var z = variable + unit;
            $(progressBar[i]).css("width", z);
            var vrijednost = parseFloat(vrijednosti[i].innerText);
            if (vrijednost >= 3 && vrijednost < 8) {
                vrijednosti[i].style.color = "#FFC107";
                $(progressBar[i]).addClass("bg-warning");
            }
            else if (vrijednost >= 8 && vrijednost <= 10) {
                vrijednosti[i].style.color = "#28A745";
            }
            else {
                vrijednosti[i].style.color = "#DC3545";
                $(progressBar[i]).addClass("bg-danger");
            }
        }
        var progressBar1 = document.getElementsByClassName("progress-bar bg-info");
        var vrijednosti1 = document.getElementsByClassName("broj");
        for (var i = 0; i < vrijednosti1.length; i++) {
            var variable;
            if (i == 0) {
                variable = parseFloat(vrijednosti1[i].innerText);
                var brojUtakmica = parseInt(document.getElementById("nastupiUkupno").innerText);
                var perc = ((variable / brojUtakmica) * 100).toFixed(0);
                $(progressBar1[i]).html(perc + "%");
                variable = perc;
            }
            if (i == 1) {
                variable = parseFloat(vrijednosti1[i].innerText);
                var brojMinuta = parseInt(document.getElementById("minute").innerText);
                var perc = ((variable / brojMinuta) * 100).toFixed(0);
                $(progressBar1[i]).html(perc + "%");
                variable = perc;
            }
            if (i == 2) {
                variable = parseFloat(vrijednosti1[i].innerText) * 10;
                $(progressBar1[i]).html(variable + "%");
            }
            var unit = "%";
            var z = variable + unit;
            $(progressBar1[i]).css("width", z);
        }
    });
</script>