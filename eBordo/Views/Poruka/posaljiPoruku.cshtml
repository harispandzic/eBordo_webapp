<script>
    function posaljiPoruku() {
        var form = $("#slanjePoruke");
        var url = "/Poruka/slanjePoruke";
        $.ajax({
            type: "POST",
            url: url,
            data: form.serialize(),
            success: function (msg) {
                notifikacija(msg);
                document.getElementById("exampleFormControlTextarea4").value = "";
            },
            error: function (msg) {
                notifikacija("Greška u komunikaciji sa serverom!");
            }
        });
    }
</script>
