<link rel="stylesheet" href="~/css/UrediDodajObrisi.css">
<link rel="stylesheet" href="~/css/igracDodaj.css">
<link rel="stylesheet" href="~/css/igracDetaljiPrikaz.css">
<script src="~/js/prikaziDetaljeIgrac.js"></script>

<style>
