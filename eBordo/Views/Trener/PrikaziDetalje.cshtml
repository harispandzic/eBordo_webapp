                                <i class="fa fa-phone" aria-hidden="true"></i><b><span id="podaci1">Telefon: </span></b><span id="podatakSpan"> @Model.telefon</span>  <br />
                                <i class="fa fa-envelope-o" aria-hidden="true"></i><b><span id="podaci1">Mail: </span></b><span id="podatakSpan"> @Model.emailAdresa</span>  <br />
                                <i class="fa fa-user" aria-hidden="true"></i><b><span id="podaci1">Username: </span></b><span id="podatakSpan"> @Model.username</span>  <br />
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <img id="statistikaLogo" src="https://i.postimg.cc/xTDF76Vg/Contract-Icon-1.png" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-weight:bold;">Podaci o ugovoru</h5>
                                    </div>
                                </div>
                                <hr style="margin-top:0px;"/>
                                <i class="fa fa-calendar" aria-hidden="true"></i><b><span id="podaci1">Datum početka: </span></b><span id="podatakSpan">@Model.datumPocetka</span>  <br />
                                <i class="fa fa-calendar" aria-hidden="true"></i><b><span id="podaci1">Datum završetka: </span></b><span id="podatakSpan"> @Model.datumZavrsetka</span>  <br />
                                <i class="fa fa-money" aria-hidden="true"></i><b><span id="podaci1">Iznos plate: </span></b><span id="podatakSpan"> @Model.iznosPlate €</span>  <br />
                                <i class="fa fa-sticky-note" aria-hidden="true"></i><b><span id="podaci1">Napomene: </span></b><span id="podatakSpan"> @Model.napomene</span>  <br />
                            </div>
                            <hr style="width:97%;" />
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <img id="statistikaLogo" src="https://i.postimg.cc/63QyBVsm/kisspng-computer-icons-coaching-sport-5aead0fc0956f4-2838904815253383640383.png" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-weight:bold;">Podaci o treneru</h5>
                                    </div>
                                </div>
                                <hr style="margin-top:0px;" />
                                <i class="fa fa-check" aria-hidden="true"></i><b><span id="podaci1">Status: </span></b>
                                @if (Model.statusIgraca == Data.EntityModels.Status.Aktivan)
                                {
                                    <span style="margin-bottom:10px;" class="status text-success">&bull;</span>
                                }
                                else
                                {
                                    <span style="margin-bottom:10px;" class="status text-danger">&bull;</span>
                                }
                                <span id="podatakSpan">@Model.statusIgraca</span>  <br />
                                <i class="fa fa-hashtag" aria-hidden="true"></i><b><span id="podaci1">Godine: </span></b><span id="podatakSpan">@Model.godine</span>  <br />
                                <i class="fa fa-calendar" aria-hidden="true"></i><b><span id="podaci1">Prva zvanična utakmcica: </span></b><span id="podatakSpan">@Model.prvaZvanicnaUtakmica</span>  <br />
                                <i class="fa fa-arrow-circle-left" aria-hidden="true"></i><b><span id="podaci1">Godine iskustva: </span></b><span id="podatakSpan"> @Model.godineIskustva</span>  <br />
                                <i class="fa fa-star" aria-hidden="true"></i><b><span id="podaci1">Licenca: </span></b>
                                @if (Model.trenerskaLicenca == Data.EntityModels.TrenerskaLicenca.UEFA_A)
                                {
                                    <span id="boja" class="status text-warning">&bull;</span>
                                    <span id="podatakSpan">UEFA A Licenca</span> <br />
                                }
                                @if (Model.trenerskaLicenca == Data.EntityModels.TrenerskaLicenca.UEFA_B)
                                {
                                    <span id="boja" class="status text-info">&bull;</span>
                                    <span id="podatakSpan">UEFA B Licenca</span> <br />
                                }
                                @if (Model.trenerskaLicenca == Data.EntityModels.TrenerskaLicenca.UEFA_Pro)
                                {
                                    <span id="boja" class="status text-success">&bull;</span>
                                    <span id="podatakSpan">UEFA Pro Licenca</span> <br />
                                }
                                <i class="fa fa-heart" aria-hidden="true"></i><b><span id="podaci1">Preferirana formacija: </span></b>
                                @if (Model.preferiranaFormacija == Data.EntityModels.Formacija.F4_4_2)
                                {
                                    <span id="podatakSpan">4-4-2</span> <br />
                                }
                                @if (Model.preferiranaFormacija == Data.EntityModels.Formacija.F4_3_3)
                                {
                                    <span id="podatakSpan">4-3-3</span> <br />
                                }
                                @if (Model.preferiranaFormacija == Data.EntityModels.Formacija.F4_2_3_1)
                                {
                                    <span id="podatakSpan">4-2-3-1</span> <br />
                                }
                                <i class="fa fa-money" aria-hidden="true"></i><b><span id="podaci1">Tr. vrijednost: </span></b><span id="podatakSpan"> @Model.trzisnaVrijednost €</span>  <br />
                                <i class="fa fa-link" aria-hidden="true"></i><b><span id="podaci1">Transfermarkt: </span></b><a href="@Model.transferMartkAcc" id="podatakSpan">@Model.ime @Model.prezime</a>  <br />
                                <i class="fa fa-history" aria-hidden="true"></i><b><span id="podaci1">Dosadašnji klubovi: </span></b><span id="podatakSpan"> @Model.dosadasnjiKlubovi</span>  <br />
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <img id="statistikaLogo" src="https://i.postimg.cc/xTc7HKQM/bar-chart-676.png" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-weight:bold;">Statistički podaci</h5>
                                    </div>
                                </div>
                                <hr style="margin-top:0px;" />
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <img id="statistikaLogo" src="https://tmsi.akamaized.net/icons/Spiele.svg" />
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="boja1" class="status text-success">&bull;</span>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="boja1" class="status text-secondary">&bull;</span>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="boja1" class="status text-danger">&bull;</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-family:fantasy;margin-top:10px;">UTAKMICE</h5>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-family:fantasy;margin-top:10px;">POBJEDE</h5>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-family:fantasy;margin-top:10px;">NERJEŠENO</h5>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-family:fantasy;margin-top:10px;">PORAZI</h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <span hidden id="brojOdigranihUtakmica">@Model.brojOdigranihUtakmica</span>
                                    <div class="col d-flex justify-content-center">
                                        <span id="brojUtakmica" class="spanStatistikaShow">@Model.brojUtakmica</span><br />
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="brojPobjeda" class="spanStatistikaShow">@Model.brojPobjeda</span><br />
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="brojNerjesenih" class="spanStatistikaShow">@Model.brojNerjesenih</span><br />
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <span id="brojPoraza" class="spanStatistikaShow">@Model.brojPoraza</span><br />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <div class="container">
                                            <div class="progress">
                                                <div style="color:black;" class="progress-bar bg-info" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="@Model.brojUtakmica"></div><br />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <div class="container">
                                            <div class="progress">
                                                <div style="color:black;" class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="@Model.brojUtakmica"></div><br />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <div class="container">
                                            <div class="progress">
                                                <div style="color:black;" class="progress-bar bg-secondary" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="@Model.brojUtakmica"></div><br />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col d-flex justify-content-center">
                                        <div class="container">
                                            <div class="progress">
                                                <div style="color:black;" class="progress-bar bg-danger" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="@Model.brojUtakmica"></div><br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button onclick="generisiReport(@Model.igracID)" type="button" class="btn btn-warning btn-sm"><span style="float:right;" class="material-icons">get_app</span></button>*@
                    <button type="button" class="btn btn-success btn-sm"><span style="float:right;" data-dismiss="modal" class="material-icons">keyboard_backspace</span></button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        var progressBar = document.getElementsByClassName("progress-bar");
        var vrijednosti = document.getElementsByClassName("spanStatistikaShow");
        var brojOdigranihUtakmica = parseInt(document.getElementById("brojOdigranihUtakmica").innerText);
        var max = parseInt(document.getElementById("brojUtakmica").innerText);
        for (var i = 0; i < vrijednosti.length; i++) {
            var variable;
            if (i == 0) {
                variable = parseInt(vrijednosti[i].innerText);
                var perc = ((variable / brojOdigranihUtakmica) * 100).toFixed(0);
                $(progressBar[i]).html(perc + "%");
            }
            if (i == 1) {
                variable = parseFloat(vrijednosti[i].innerText);
                var perc = ((variable / max) * 100).toFixed(0);
                $(progressBar[i]).html(perc + "%");
            }
            if (i == 2) {
                variable = parseFloat(vrijednosti[i].innerText);
                var perc = ((variable / max) * 100).toFixed(0);
                $(progressBar[i]).html(perc + "%");
            }
            if (i == 3) {
                variable = parseFloat(vrijednosti[i].innerText);
                var perc = ((variable / max) * 100).toFixed(0);
                $(progressBar[i]).html(perc + "%");
            }
            var unit = "%";
            var z = perc + unit;
            $(progressBar[i]).css("width", z);
        }
    });
</script>