<div class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <img id="slikaWatermark" src="~/sarajevo.png" />
            <form asp-action="SnimiDodaj" asp-controller="Igrac" enctype="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <img id="previewImg" class="avatar1" src="~/uploads/@Model.slika" />
                        @Model.ime @Model.prezime
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col" id="kolonaSredina">
                                <img id="statistikaLogo" src="https://i.postimg.cc/FRN22GL2/personal-icon-6.png" />
                                <b>Ime i prezime</b>
                            </div>
                            <div class="col-4" id="kolonaSredina">
                                <img id="statistikaLogo" src="https://i.postimg.cc/Y0jyHPqy/clipart1345327.png" />
                                <b>Državljanstvo</b>
                            </div>
                            <div class="col" id="kolonaSredina">
                                <img id="statistikaLogo" src="https://i.postimg.cc/4ybnXWLV/pngegg-1.png" />
                                <b>Mjesto rođenja</b>
                            </div>
                            <div class="col" id="kolonaSredina">
                                <img id="statistikaLogo" src="https://i.postimg.cc/q7zt2XqH/favpng-calendar-date.png" />
                                <b>Datum rođenja</b>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-center">
                                <span id="podatakSpan">
                                    <img id="previewImg" class="avatar1" src="~/uploads/@Model.slika" />
                                    @Model.ime @Model.prezime
                                </span>
                            </div>
                            <div class="col-4 d-flex justify-content-center">
                                <span id="podatakSpan">
                                    <img class="mojaKlasa" src="~/uploads/@Model.zastava" />
                                    @Model.drzavljanstvo
                                </span>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <span id="podatakSpan">
                                    <img class="mojaKlasa" src="~/uploads/@Model.zastavaZaGrad" />
                                    @Model.gradRodjenja
                                </span>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <span id="podatakSpan">
                                    @Model.datumRodjenja<br />
                                </span>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <img id="statistikaLogo" src="https://i.postimg.cc/KYZfbW0r/16277906831582823580-128.png"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <h5 style="color:maroon;font-weight:bold;">Kontakt podaci</h5>
                                    </div>
                                </div>
                                <hr style="margin-top:0px;" />
